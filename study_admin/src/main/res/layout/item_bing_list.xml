<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	
	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="5dp">
	
		<ImageView
			android:id="@+id/state_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="15dp"
			app:srcCompat="@drawable/ic_schedule_black"
			android:tint="@color/orange"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toTopOf="parent"/>
		
		<TextView
			android:id="@+id/state_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/orange"
			android:text="@string/state_waiting"
			app:layout_constraintLeft_toRightOf="@id/state_icon"
			app:layout_constraintTop_toTopOf="@id/state_icon"
			app:layout_constraintBottom_toBottomOf="@id/state_icon"/>
	
	
	
			<at.jodlidev.metawear.study.Element_State_icons
				android:id="@+id/bing_data"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="40dp"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintTop_toBottomOf="@id/state_icon"/>
	
		<ImageButton
			android:id="@+id/btn_delete"
			style="@style/Widget.AppCompat.Button.Borderless"
			android:contentDescription="@string/delete"
			android:layout_marginStart="15dp"
			android:layout_width="48dp"
			android:layout_height="wrap_content"
			app:srcCompat="@drawable/ic_delete_black"
			android:tint="@android:color/darker_gray"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"/>
	</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>