<?xml version="1.0" encoding="utf-8"?>

<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_marginStart="10dp"
	android:layout_marginEnd="10dp">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
		<FrameLayout
			android:id="@+id/states_box"
			style="@style/AppTheme.BorderBox"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp">
			
			<TableLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dp">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:textColor="@android:color/black"
					android:textSize="18sp"
					android:text="@string/current_configuration"/>
				<TextView
					android:id="@+id/acc_configured_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="5dp"
					android:layout_marginEnd="10dp"
					android:paddingTop="2dp"
					android:paddingBottom="2dp"
					android:textSize="12sp"
					android:text="@string/brackets_acc_configured_time"/>
				<TextView
					android:id="@+id/switch_configured_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="5dp"
					android:layout_marginEnd="10dp"
					android:paddingTop="2dp"
					android:paddingBottom="2dp"
					android:textSize="12sp"
					android:text="@string/brackets_switch_configured_time"/>
				<TableRow
					android:layout_marginTop="20dp">
					<TextView
						android:id="@+id/logging_header"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginEnd="10dp"
						android:text="@string/colon_logging"/>
					<ImageView
						android:id="@+id/log_acceleration_state"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						app:srcCompat="@drawable/ic_acceleration_black"
						android:tint="@color/colorAccent"/>
					<ImageView
						android:id="@+id/log_length_of_click_state"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						app:srcCompat="@drawable/ic_time_black"
						android:tint="@color/colorAccent"/>
					<ImageView
						android:id="@+id/log_number_of_clicks_state"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						app:srcCompat="@drawable/ic_count_black"
						android:tint="@color/colorAccent"/>
				</TableRow>
				<TableRow
					android:layout_marginTop="10dp">
					<TextView
						android:id="@+id/feedback_header"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginEnd="10dp"
						android:text="@string/colon_switch_feedback"/>
					
					<ImageView
						android:id="@+id/vibration_state"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						app:srcCompat="@drawable/ic_vibration_black"
						android:tint="@color/colorAccent"/>
					
					<ImageView
						android:id="@+id/led_state"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						app:srcCompat="@drawable/ic_lightbulb_black"/>
				</TableRow>
				<TableRow
					android:id="@+id/number_timeout_box"
					android:layout_marginTop="10dp">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginEnd="10dp"
						android:text="@string/colon_log_number_feedback"/>
					
					<ImageView
						android:id="@+id/number_timeout_vibration_state"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						app:srcCompat="@drawable/ic_vibration_black"
						android:tint="@color/colorAccent"/>
					
					<ImageView
						android:id="@+id/number_timeout_led_state"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						app:srcCompat="@drawable/ic_lightbulb_black"/>
				</TableRow>
				<TableRow
					android:id="@+id/battery_feedback_box"
					android:layout_marginTop="10dp"
					android:gravity="start|center">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginEnd="10dp"
						android:text="@string/colon_battery_low_feedback"/>
					
					<LinearLayout>
						<TextView
							android:id="@+id/battery_threshold"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="25"/>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="%"/>
					</LinearLayout>
					<ImageView
						android:id="@+id/battery_vibration_state"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						app:srcCompat="@drawable/ic_vibration_black"
						android:tint="@color/colorAccent"/>
					
					<ImageView
						android:id="@+id/battery_led_state"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						app:srcCompat="@drawable/ic_lightbulb_black"/>
					
				</TableRow>
			</TableLayout>
		</FrameLayout>
		
		<TextView
			android:id="@+id/macro_already_saved_info"
			style="@style/AppTheme.BorderBox"
			android:visibility="gone"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:padding="10dp"
			android:text="@string/info_switch_macro_already_saved"/>
		
		<Button
			style="@style/Base.Widget.AppCompat.Button.Borderless"
			android:id="@+id/btn_edit"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:padding="10dp"
			android:layout_gravity="center"
			android:text="@string/btn_program_switch"
			android:foreground="@drawable/border"
			android:background="@drawable/selectable_item_background_white"
			android:elevation="5dp"
			android:drawableStart="@drawable/ic_program_board_black"/>
		
	</LinearLayout>
</ScrollView>