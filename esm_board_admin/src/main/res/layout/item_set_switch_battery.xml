<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	style="@style/AppTheme.BorderBox"
	android:id="@+id/battery_behaviour_box"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="10dp"
	android:orientation="vertical">
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:text="@string/colon_battery_low_feedback"
		android:textSize="18sp"
		android:textStyle="bold"/>
	
	<CheckBox
		android:id="@+id/battery_feedback_checkbox"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/enable"
		android:layout_marginStart="20dp"/>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginStart="20dp">
		
		<TextView
			android:id="@+id/threshold_label"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="@string/colon_battery_low_threshold"
			android:textColor="@android:color/darker_gray"
			android:layout_marginStart="10dp"
			android:labelFor="@id/vib_strength"/>
		
		<EditText
			android:id="@+id/battery_threshold"
			android:layout_width="50dp"
			android:inputType="number"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:gravity="center"
			android:enabled="false"/>
		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="%"
			android:layout_gravity="center"/>
	</LinearLayout>
	<at.jodlidev.metawear.study.Element_Vibration_checkbox
		android:id="@+id/vibration_battery_checkbox"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="20dp"
		app:vibration_strength="100"
		app:vibration_ms="300"
		app:vibration_enabled="false"/>
	
	<at.jodlidev.metawear.study.Element_Led_checkbox
		android:id="@+id/led_battery_checkbox"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="20dp"
		app:led_color="RED"
		app:led_enabled="false"/>
</LinearLayout>