<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<TableLayout
		android:id="@+id/device_info_box"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginTop="5dp"
		android:layout_marginStart="5dp"
		android:layout_marginEnd="5dp"
		android:layout_columnSpan="2"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		android:background="@drawable/selectable_item_background_white"
		android:elevation="3dp"
		android:foreground="@drawable/border"
		android:padding="5dp"
		tools:layout_editor_absoluteX="10dp"
		tools:layout_editor_absoluteY="10dp">
		
		<TableRow>
			
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_span="2"
				android:layout_weight="1"
				android:gravity="center"
				android:text="@string/colon_device_info"
				android:textColor="@android:color/black"
				android:textSize="20sp"/>
		</TableRow>
		
		<TableRow>
			
			<TextView
				android:layout_width="0dp"
				android:layout_height="30dp"
				android:layout_gravity="start|center"
				android:layout_weight="0.5"
				android:gravity="start|center"
				android:labelFor="@id/device_name_info"
				android:text="@string/colon_device_name"
				android:textStyle="bold"/>
			
			<TextView
				android:id="@+id/device_name_info"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_gravity="start|center"
				android:layout_weight="0.5"
				android:background="?android:attr/selectableItemBackground"
				android:drawableEnd="@drawable/ic_edit_black"
				android:gravity="start"
				android:text="@string/state_waiting"/>
		</TableRow>
		
		<TableRow>
			
			<TextView
				android:layout_width="0dp"
				android:layout_height="30dp"
				android:layout_gravity="start|center"
				android:layout_weight="0.5"
				android:gravity="start|center"
				android:labelFor="@id/model_info"
				android:text="@string/colon_model"
				android:textStyle="bold"/>
			
			<TextView
				android:id="@+id/model_info"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_gravity="start|center"
				android:layout_weight="0.5"
				android:gravity="start"
				android:text="@string/state_waiting"/>
		</TableRow>
		
		<TableRow
			android:layout_width="match_parent">
			
			<TextView
				android:layout_width="0dp"
				android:layout_height="30dp"
				android:layout_gravity="start|center"
				android:layout_weight="0.5"
				android:gravity="start|center"
				android:labelFor="@id/firmware_info"
				android:text="@string/colon_firmware"
				android:textStyle="bold"/>
			
			<TextView
				android:id="@+id/firmware_info"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_gravity="start|center"
				android:layout_weight="0.5"
				android:gravity="start"
				android:text="@string/state_waiting"/>
		</TableRow>
		
		<TableRow
			android:layout_width="match_parent">
			
			<TextView
				android:layout_width="0dp"
				android:layout_height="30dp"
				android:layout_gravity="start|center"
				android:layout_weight="0.5"
				android:gravity="start|center"
				android:labelFor="@id/battery_info"
				android:text="@string/colon_battery"
				android:textStyle="bold"/>
			
			<TextView
				android:id="@+id/battery_info"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_gravity="start|center"
				android:layout_weight="0.5"
				android:gravity="start"
				android:text="@string/state_waiting"/>
		</TableRow>
		
		<TableRow>
			
			<TextView
				android:layout_width="0dp"
				android:layout_height="30dp"
				android:layout_gravity="start|center"
				android:layout_weight="0.5"
				android:gravity="start|center"
				android:labelFor="@id/user_notes"
				android:text="@string/colon_user_notes"
				android:textStyle="bold"/>
			
			<TextView
				android:id="@+id/user_notes"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_gravity="start|center"
				android:layout_weight="0.5"
				android:background="?android:attr/selectableItemBackground"
				android:drawableEnd="@drawable/ic_edit_black"
				android:gravity="start"/>
		</TableRow>
	</TableLayout>
	
	
	<LinearLayout
		android:id="@+id/btn_new"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginTop="5dp"
		android:layout_marginStart="5dp"
		android:layout_marginEnd="5dp"
		android:padding="5dp"
		app:layout_constraintTop_toBottomOf="@id/device_info_box"
		app:layout_constraintBottom_toTopOf="@id/btn_download"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/center_x"
		android:gravity="center"
		android:orientation="vertical"
		android:foreground="@drawable/border"
		android:background="@drawable/selectable_item_background_white"
		android:elevation="3dp">
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="2dp"
			android:drawableStart="@drawable/ic_new_black"
			android:gravity="center"
			android:text="@string/btn_new"
			android:textAllCaps="true"
			android:textColor="@android:color/black"
			android:textSize="15sp"/>
		
		<TextView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:gravity="top|center"
			android:padding="3dp"
			android:text="@string/info_btn_new"
			android:textSize="12sp"/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/btn_continue"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginTop="5dp"
		android:layout_marginStart="5dp"
		android:layout_marginEnd="5dp"
		android:padding="5dp"
		app:layout_constraintTop_toBottomOf="@id/device_info_box"
		app:layout_constraintBottom_toTopOf="@id/btn_empty_board_log"
		app:layout_constraintLeft_toRightOf="@id/center_x"
		app:layout_constraintRight_toRightOf="parent"
		android:gravity="center"
		android:orientation="vertical"
		android:foreground="@drawable/border"
		android:background="@drawable/selectable_item_background_white"
		android:elevation="3dp">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="2dp"
			android:drawableStart="@drawable/ic_continue_black"
			android:gravity="center"
			android:text="@string/btn_continue"
			android:textSize="15sp"
			android:textAllCaps="true"
			android:textColor="@android:color/black"/>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:gravity="top|center"
			android:padding="3dp"
			android:textSize="12sp"
			android:text="@string/info_btn_continue"/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/btn_download"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginTop="10dp"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="5dp"
		android:padding="5dp"
		app:layout_constraintTop_toBottomOf="@id/btn_new"
		app:layout_constraintBottom_toTopOf="@id/btn_load"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/center_x"
		android:gravity="center"
		android:orientation="vertical"
		android:foreground="@drawable/border"
		android:background="@drawable/selectable_item_background_white"
		android:elevation="3dp">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="2dp"
			android:drawableStart="@drawable/ic_download"
			android:gravity="center"
			android:text="@string/btn_download_data"
			android:textSize="15sp"
			android:textAllCaps="true"
			android:textColor="@android:color/black"/>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:gravity="top|center"
			android:padding="3dp"
			android:textSize="12sp"
			android:text="@string/info_btn_download"/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/btn_empty_board_log"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginTop="10dp"
		android:layout_marginStart="5dp"
		android:layout_marginEnd="20dp"
		android:padding="5dp"
		app:layout_constraintTop_toBottomOf="@id/btn_continue"
		app:layout_constraintBottom_toTopOf="@id/btn_save"
		app:layout_constraintLeft_toRightOf="@id/center_x"
		app:layout_constraintRight_toRightOf="parent"
		android:gravity="center"
		android:orientation="vertical"
		android:foreground="@drawable/border"
		android:background="@drawable/selectable_item_background_white"
		android:elevation="3dp">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="2dp"
			android:drawableStart="@drawable/ic_delete_sweep_black"
			android:gravity="center"
			android:text="@string/empty_data"
			android:textSize="15sp"
			android:textAllCaps="true"
			android:textColor="@android:color/black"/>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:gravity="top|center"
			android:padding="3dp"
			android:textSize="12sp"
			android:text="@string/info_btn_empty_board_log"/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/btn_load"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginTop="5dp"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="5dp"
		android:layout_marginBottom="5dp"
		android:padding="5dp"
		app:layout_constraintTop_toBottomOf="@id/btn_download"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/center_x"
		android:gravity="center"
		android:orientation="vertical"
		android:foreground="@drawable/border"
		android:background="@drawable/selectable_item_background_white"
		android:elevation="3dp">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="2dp"
			android:drawableStart="@drawable/ic_restore_black"
			android:gravity="center"
			android:text="@string/btn_import"
			android:textSize="15sp"
			android:textAllCaps="true"
			android:textColor="@android:color/black"/>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:gravity="top|center"
			android:padding="3dp"
			android:textSize="12sp"
			android:text="@string/info_btn_load"/>
	</LinearLayout>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/btn_save"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginTop="5dp"
		android:layout_marginStart="5dp"
		android:layout_marginEnd="20dp"
		android:layout_marginBottom="5dp"
		android:padding="5dp"
		app:layout_constraintTop_toBottomOf="@id/btn_empty_board_log"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toRightOf="@id/center_x"
		app:layout_constraintRight_toRightOf="parent"
		android:gravity="center"
		android:orientation="vertical"
		android:foreground="@drawable/border"
		android:background="@drawable/selectable_item_background_white"
		android:elevation="3dp">
		
		<at.jodlidev.metawear.study.Element_Tooltip_icon
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_gravity="top"
			app:tooltip_msg="@string/tooltip_save"
			app:tooltip_gravity="top"/>
		<TextView
			android:id="@+id/save_header"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="2dp"
			android:drawableStart="@drawable/ic_save_black"
			android:gravity="center"
			android:text="@string/btn_export"
			android:textSize="15sp"
			android:textAllCaps="true"
			android:textColor="@android:color/black"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"/>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_marginTop="10dp"
			android:gravity="top|center"
			android:padding="3dp"
			android:textSize="12sp"
			android:text="@string/info_btn_save"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toBottomOf="@id/save_header"
			app:layout_constraintBottom_toBottomOf="parent"/>
	</androidx.constraintlayout.widget.ConstraintLayout>




	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/center_x"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.5"/>

	<!--<androidx.constraintlayout.widget.Guideline-->
		<!--android:id="@+id/divider1"-->
		<!--android:layout_width="wrap_content"-->
		<!--android:layout_height="wrap_content"-->
		<!--android:orientation="horizontal"-->
		<!--app:layout_constraintGuide_percent="0.25"/>-->
</androidx.constraintlayout.widget.ConstraintLayout>
